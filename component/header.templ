package component

import (
	"wikinow/parser"
)

templ Header(data *parser.Header) {
	if data.Level == 1 {
		<h1>
			for _, child := range data.Children {
				switch child := child.(type) {
					case *parser.Paragraph:
						@Paragraph(child)
					case *parser.Bold:
						@Bold(child)
				}
			}
		</h1>
	}
}

templ Paragraph(data *parser.Paragraph) {
	{ data.Content }
}

templ Bold(data *parser.Bold) {
	<b>
		{ data.Content }
	</b>
}
